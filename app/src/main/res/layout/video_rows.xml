<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView_video_ThumbNail"
            tools:layout_editor_absoluteY="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="video title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_video_Title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_video_ThumbNail"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView_profile" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Channel Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/textView_Channel_Name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_video_Title"
            app:layout_constraintStart_toStartOf="@+id/textView_video_Title"
            app:layout_constraintEnd_toEndOf="@+id/textView_video_Title"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView_profile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView_video_ThumbNail"/>
</android.support.constraint.ConstraintLayout>